@page
@model LibMan.SignUpModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Pages/Shared/_LayoutLogin.cshtml";
}

<h3 style="color:#FFFFFF;">Sign Up</h3>

<form method="post">
    <div class="row">
        <div class="columnsign" style="background-color:#ffe6b3;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblUser.Name" class="control-label"></label>
                <input asp-for="TblUser.Name" class="form-control" />
                <span asp-validation-for="TblUser.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblUser.Surname" class="control-label"></label>
                <input asp-for="TblUser.Surname" class="form-control" />
                <span asp-validation-for="TblUser.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblUser.BirthDate" class="control-label"></label>
                <input asp-for="TblUser.BirthDate" class="form-control" />
                <span asp-validation-for="TblUser.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblUser.Username" class="control-label"></label>
                <input asp-for="TblUser.Username" class="form-control" />
                <span asp-validation-for="TblUser.Username" class="text-danger"></span>
            </div>
        </div>
        <div class="columnsign" style="background-color:#ffe6b3;">
            <div class="form-group">
                <label asp-for="TblUser.Email" class="control-label"></label>
                <input asp-for="TblUser.Email" class="form-control" />
                <span asp-validation-for="TblUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblUser.Password" class="control-label"></label>
                <input type = "password" asp-for="TblUser.Password" class="form-control" />
                <span asp-validation-for="TblUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblUser.Gender" class="control-label"></label>
                <input asp-for="TblUser.Gender" class="form-control" />
                <span asp-validation-for="TblUser.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblUser.PhotoName" class="control-label"></label>
                <input asp-for="TblUser.PhotoName" class="form-control" />
                <span asp-validation-for="TblUser.PhotoName" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="column2" style="background-color:#ffe6b3;">
            <label>
                <input type="checkbox" checked="checked" name="remember" style="  margin-bottom: 15px"> Remember me
            </label>
            <br>
            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
            <br>
            <div class="form-group">
                <input type="submit" value="Sign Up" class="buttons" />
                <input type="submit" value="Cancel" class="cancelbtn" />
                <a asp-page="Index">Back to List</a>
            </div>

        </div>
    </div>

</form>
 <br></br>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
